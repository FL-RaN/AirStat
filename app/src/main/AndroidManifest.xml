<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.qi.airstat">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">

        <activity android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".SensorDataOverviewActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="com.qi.airstat.SensorDataOverviewActivity" />

                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <service android:name=".SensorDataUpdateService">
            <intent-filter>
                <action android:name="com.qi.airstat.SensorDataUpdateServicew" />

                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </service>

        <service android:name=".FakeDataTransmitService">
            <intent-filter>
                <action android:name="com.qi.airstat.FakeDataTransmitService" />

                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </service>
        <activity android:name=".login.LoginBaseActivity"
            android:theme="@style/Theme.AppCompat.Translucent"/>
    </application>
</manifest>