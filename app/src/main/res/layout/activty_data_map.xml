<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/colorThemeHeavyGrey"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.sothree.slidinguppanel.SlidingUpPanelLayout xmlns:sothree="http://schemas.android.com/apk/res-auto"
        android:id="@+id/slider_data_map_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/button_view"
        android:layout_alignParentTop="true"
        android:background="@color/colorThemeHeavyGrey"
        android:gravity="bottom"
        android:orientation="vertical"
        sothree:umanoDragView="@+id/dragView"
        sothree:umanoOverlay="true"
        sothree:umanoPanelHeight="100dp"

        sothree:umanoParallaxOffset="100dp"
        sothree:umanoScrollableView="@+id/main">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linear_map"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_margin="8dp"
                android:background="@drawable/shape_rounded_border_component"
                android:orientation="vertical"
                android:padding="20dp">

                <fragment
                    android:id="@+id/fragment_data_map"
                    android:name="com.google.android.gms.maps.MapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="18"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="10"
                            android:background="#6d6d6d"
                            android:text=" " />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="15"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="10"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/button"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="#009865"
                                    android:textColor="#ffffff" />

                                <TextView
                                    android:id="@+id/button2"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="@drawable/AQI_MODERATE"
                                    android:textColor="#ffffff" />

                                <TextView
                                    android:id="@+id/button3"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="@drawable/AQI_SENSITIVE"
                                    android:textColor="#ffffff" />

                                <TextView
                                    android:id="@+id/button4"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="@drawable/AQI_UNHEALTHY"
                                    android:textColor="#ffffff" />

                                <TextView
                                    android:id="@+id/button5"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="@drawable/AQI_VERY_UNHEALTHY"
                                    android:textColor="#ffffff" />

                                <TextView
                                    android:id="@+id/button6"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="@drawable/AQI_HAZARDOUS"
                                    android:textColor="#ffffff" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="7"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/textView7"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="left|bottom|center"
                                    android:text=" " />

                                <TextView
                                    android:id="@+id/textView8"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="bottom|center|right"
                                    android:text=" " />
                            </LinearLayout>

                        </LinearLayout>

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="10"
                            android:background="#6d6d6d"
                            android:text=" " />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView10"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="left|bottom|center"
                            android:text="0"
                            android:textColor="@color/colorThemeHeavyGrey" />

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="bottom|center|right"
                            android:text="500"
                            android:textColor="@color/colorThemeHeavyGrey" />
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>


        </RelativeLayout>


        <LinearLayout
            android:id="@+id/slider_data_map_panel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:orientation="vertical">
            <!--FROM HERE-->

            <LinearLayout
                android:id="@+id/bar_data_map_title"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/AQI_GOOD"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_data_map_panel_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/icon_page_up"
                    android:backgroundTint="#33FFFFFF"
                    android:scaleType="center" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <TextView
                        android:id="@+id/tv_data_map_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_weight="1"
                        android:text=""
                        android:textColor="#99ffffff"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_data_map_grade"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="bottom|right"
                        android:text=""
                        android:textColor="#ffffff"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_data_map_sub_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|top"
                    android:layout_marginLeft="10sp"
                    android:layout_weight="1"
                    android:text=""
                    android:textColor="#77000000"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:background="#eaeced"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView11"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="9"
                            android:gravity="top|left"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/textView13"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/shape_layout_down_border"
                            android:gravity="top|left"
                            android:textSize="20dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/shape_layout_down_border"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_data_map_panel_aqi"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="top|right"
                            android:text="100.1"
                            android:textColor="#324e61"
                            android:textSize="45sp" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/shape_layout_down_border"
                        android:gravity="top|left"
                        android:text="AQI"
                        android:textColor="#8e9aa0"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/gradient_orange_red"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="3dp"
                        android:layout_weight="2"
                        android:background="@drawable/icon_thermometer"
                        android:backgroundTint="#99ffffff"
                        android:gravity="top|left"
                        android:scaleType="centerInside"

                        android:textColor="#99ffffff" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2">

                    </LinearLayout>


                    <TextView
                        android:id="@+id/tv_data_map_panel_temp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="bottom|right"
                        android:paddingRight="10dp"
                        android:text="100.2"
                        android:textColor="#ffffff"
                        android:textIsSelectable="false"
                        android:textSize="40dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/gradient_white_blue"
                    android:orientation="horizontal"
                    android:padding="0dp">

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="top|left"
                        android:paddingLeft="10dp"
                        android:text="CO"
                        android:textColor="#99ffffff"
                        android:textSize="32sp" />

                    <TextView
                        android:id="@+id/tv_data_map_panel_co"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="bottom|right"
                        android:paddingRight="10dp"
                        android:text="100.2"
                        android:textColor="#ffffff"
                        android:textIsSelectable="false"
                        android:textSize="40dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/gradient_white_skyblue"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="top|left"
                        android:paddingLeft="10dp"
                        android:text="SO2"
                        android:textColor="#99ffffff"
                        android:textSize="32sp" />

                    <TextView
                        android:id="@+id/tv_data_map_panel_so2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="bottom|right"
                        android:paddingRight="10dp"
                        android:text="100.2"
                        android:textColor="#ffffff"
                        android:textIsSelectable="false"
                        android:textSize="40dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/gradient_yellow_gold"
                    android:orientation="horizontal"
                    android:padding="0dp">

                    <TextView
                        android:id="@+id/textView16"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="top|left"
                        android:paddingLeft="10dp"
                        android:text="NO2"
                        android:textColor="#99ffffff"
                        android:textSize="32sp" />

                    <TextView
                        android:id="@+id/tv_data_map_panel_no2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="bottom|right"
                        android:paddingRight="10dp"
                        android:text="100.2"
                        android:textColor="#ffffff"
                        android:textIsSelectable="false"
                        android:textSize="40dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/gradient_lavender_purple"
                    android:orientation="horizontal"
                    android:padding="0dp">

                    <TextView
                        android:id="@+id/textView18"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="top|left"
                        android:paddingLeft="10dp"
                        android:text="O3"
                        android:textColor="#99ffffff"
                        android:textSize="32sp" />

                    <TextView
                        android:id="@+id/tv_data_map_panel_o3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="bottom|right"
                        android:paddingRight="10dp"
                        android:text="100.2"
                        android:textColor="#ffffff"
                        android:textIsSelectable="false"
                        android:textSize="40dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/gradient_silver_grey"
                    android:orientation="horizontal"
                    android:padding="0dp">

                    <TextView
                        android:id="@+id/textView20"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="top|left"
                        android:paddingLeft="10dp"
                        android:text="PM2.5"
                        android:textColor="#99ffffff"
                        android:textSize="32sp" />

                    <TextView
                        android:id="@+id/tv_data_map_panel_pm2.5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="bottom|right"
                        android:paddingRight="10dp"
                        android:text="100.2"
                        android:textColor="#ffffff"
                        android:textIsSelectable="false"
                        android:textSize="40dp" />
                </LinearLayout>

            </LinearLayout>

            <!--TO HERE-->

        </LinearLayout>


    </com.sothree.slidinguppanel.SlidingUpPanelLayout>

    <com.qi.airstat.CustomView
        android:id="@+id/button_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"></com.qi.airstat.CustomView>

</RelativeLayout>
